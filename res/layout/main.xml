<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:id="@+id/imageViewBackground" android:layout_gravity="center_horizontal" android:visibility="visible"
            android:layout_alignParentLeft="true" android:layout_marginLeft="0dp" android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" android:baselineAlignBottom="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewTitle"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerInParent="true" android:layout_above="@+id/linearLayout"
            />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_centerVertical="true" android:layout_alignParentStart="false">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonStart"
                android:layout_alignParentEnd="true" android:layout_alignParentStart="true"
                android:layout_above="@+id/imageButtonOptions" android:layout_centerInParent="true"
                android:layout_weight="1" android:layout_gravity="center_horizontal"
                android:visibility="visible" android:focusable="true" android:focusableInTouchMode="false"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonOptions"
                android:layout_alignParentEnd="true" android:layout_alignParentStart="true"
                android:layout_above="@+id/imageButtonCredits" android:layout_centerInParent="true"
                android:layout_weight="1" android:layout_gravity="center"
                android:visibility="visible" android:focusable="true" android:focusableInTouchMode="false"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonCredits"
                android:layout_alignParentEnd="true" android:layout_alignParentStart="true"
                android:layout_above="@+id/imageButtonExit" android:layout_centerInParent="true"
                android:layout_weight="1" android:layout_gravity="center"
                android:visibility="visible" android:focusable="true" android:focusableInTouchMode="false"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonExit"
                android:layout_alignParentEnd="true" android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true" android:layout_centerInParent="true" android:layout_weight="1"
                android:layout_gravity="center"
                android:visibility="visible" android:focusable="true" android:focusableInTouchMode="false"/>
    </LinearLayout>
</RelativeLayout>

