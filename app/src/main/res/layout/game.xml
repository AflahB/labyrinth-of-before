<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <fragment android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:name="com.mongooseofbefore.labyrinthofbefore.activities.GameSurfaceFragment" android:id="@+id/fragment"
              android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
              tools:layout="@layout/gamefragment"/>
    <android.support.v7.widget.GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" app:columnCount="3" app:rowCount="3"
            android:id="@+id/gridLayout">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewUp" app:layout_row="0"
                app:layout_column="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewRight" app:layout_row="1"
                app:layout_column="2"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewLeft" app:layout_row="1"
                app:layout_column="0"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewDown" app:layout_row="2"
                app:layout_column="1"/>
    </android.support.v7.widget.GridLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flip"
            android:id="@+id/buttonFlip" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
            android:alpha="0.5" android:onClick="flip"/>
</RelativeLayout>